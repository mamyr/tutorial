<%= form_for(@comment) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content %>
  </div>
	<%= f.hidden_field :user_id, value: @comment.user_id %>
	<%= f.hidden_field :micropost_id, value: @comment.micropost_id %>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>